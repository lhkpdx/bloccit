<h1><%= @sponsored_posts.title %></h1>

 <div class="row">
   <div class="col-md-8">
     <p><%= @sponsored_posts.body %></p>
     <p><%= @sponsored_posts.price %></p>
   </div>
   <div class="col-md-4">
     <%= link_to "Edit", edit_topic_sponsored_post_path(@sponsored_posts.topic, @sponsored_posts), class: 'btn btn-success' %>
     <%= link_to "Delete Post", [@sponsored_posts.topic, @sponsored_posts], method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this post?' } %>
   </div>
 </div>
   </div>
 </div>
