<h1>New Question</h1>

 <div class="row">
   <div class="col-md-4">
     <p>Guidelines for questions</p>
     <ul>
       <li>Make is smart - don't waste our time.</li>
       <li>Keep it nice.</li>
     </ul>
   </div>
   <div class="col-md-8">
     <%= form_for @questions do |q| %>
       <div class="form-group">
         <%= q.label :title %>
         <%= q.text_field :title, class: 'form-control', placeholder: "Enter question subject" %>
       </div>
       <div class="form-group">
         <%= q.label :body %>
         <%= q.text_area :body, rows: 8, class: 'form-control', placeholder: "Enter your question" %>
       </div>
       <div class="form-group">
         <%= q.submit "Save", class: 'btn btn-success' %>
       </div>
     <% end %>
   </div>
 </div>
